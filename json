<body>
    <header>
        <h1>Bienvenue sur notre système de réservation</h1>
    </header>
    <div class="container">
        <h2>Créneaux disponibles</h2>
        <select id="timeSlot">
            <option value="" disabled selected>Chargement des créneaux...</option>
        </select>
        <p id="errorMessage" class="error" style="display:none;">Aucun créneau disponible pour cette date.</p>
        <h3>Résumé des réparations</h3>
        <ul id="repairSummary"></ul>
        <div class="total">Total : 0 €</div>
    </div>

    <script>
        // Lien vers le fichier JSON hébergé
        const slotsUrl = 'https://guillaumec21.github.io/slots/slots.json';

        // Charger les créneaux à partir de slots.json
        fetch(slotsUrl)
            .then(response => {
                if (!response.ok) {
                    throw new Error('Erreur lors du chargement des créneaux.');
                }
                return response.json();
            })
            .then(data => {
                const timeSlot = document.getElementById('timeSlot');
                const availableSlots = data.slots.filter(slot => slot.available);
                const errorMessage = document.getElementById('errorMessage');
                
                if (availableSlots.length === 0) {
                    errorMessage.style.display = 'block';
                    timeSlot.innerHTML = '<option value="" disabled>Aucun créneau disponible</option>';
                } else {
                    errorMessage.style.display = 'none';
                    timeSlot.innerHTML = ''; // Clear existing options
                    availableSlots.forEach(slot => {
                        const option = document.createElement('option');
                        option.value = slot.time;
                        option.textContent = slot.time;
                        timeSlot.appendChild(option);
                    });
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                document.getElementById('timeSlot').innerHTML = '<option value="" disabled>Erreur de chargement</option>';
            });
    </script>
</body>
